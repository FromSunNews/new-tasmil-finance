{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT", "FRONTEND_URL", "POSTGRES_URL", "REDIS_URL", "AUTH_SECRET", "NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "FRONTEND_URL", "POSTGRES_URL", "REDIS_URL", "AUTH_SECRET", "NODE_ENV"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["PORT", "FRONTEND_URL", "POSTGRES_URL", "REDIS_URL", "AUTH_SECRET", "NODE_ENV"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "FRONTEND_URL", "POSTGRES_URL", "REDIS_URL", "AUTH_SECRET", "NODE_ENV"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}
