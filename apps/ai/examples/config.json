      "instructions": [
        "THIS IS INSTRUCTIONS FOR THE AGENT"
      ],
      "resources": [
        {
          "resource_id": "application_tool",
          "kind": "tool",
          "server_type": "TOOL",
          "tools": [
          ],
          "connection": {
            "mcp_server_name": "application",
            "url": "http://localhost:8080/mcp",
            "transport": "streamable_http",
