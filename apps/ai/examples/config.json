              "Authorization": {
                "source": "env",
                "key": "MCP_AUTHORIZATION"
              }
            }
          }
        }
      ],
      "llm_config": {
        "model": "gpt-4.1-nano",
        "api_key": {
          "source": "env",
          "key": "LLM_PROXY_API_KEY"
        },
        "api_base": {
          "source": "env",
          "key": "LLM_PROXY_URL"
        }
      }
    },
